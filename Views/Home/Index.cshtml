@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-start">
    @if (Session["Name"] != null)
    {
        <div class="col-md-4">
            <div class="card">

                <div>
                    <div class="card-header">
                        Welcome
                    </div>
                    <div class="card-body">
                        <p>Name: @Session["Name"].ToString()</p>
                        <p>Email: @Session["Email"].ToString()</p>
                        <a href="@Url.Action("Logout", "Login")" class="btn btn-warning">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="">
