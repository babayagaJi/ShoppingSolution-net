@model List<ShoppingSolution.Models.ProductList>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cart Page</h2>
@{
    var list = (List<ShoppingSolution.Models.ProductList>)Session["cart"];
}

@if (list != null)
{

    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>

        @foreach (var item in list)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Qty
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="noproducts">No Products found in cart!</div>
}


